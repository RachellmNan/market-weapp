.spu-preview {
  width: 340rpx;
  background-color: #fff;
  margin-bottom: 30rpx;
  box-shadow: 0px 0px 6px 0px rgba(221, 221, 221, 0.5);
}

.spu-preview image {
  width: 100%;
  height: 360rpx;
}

.spu-preview .title-wrapper {
  margin: 22rpx 0 0 16rpx;
  font-size: 28rpx;
  color: #333333;
}

.spu-preview .tag-wrapper {
  margin: 10rpx 12rpx 0 16rpx;
  display: flex;
  flex-wrap: wrap;
  font-size: 20rpx !important;
}

.spu-preview .price-wrapper {
  margin: 16rpx 0 0 16rpx;
  color: #157658;
  font-size: 32rpx;
  display: flex;
}

.spu-preview .price-wrapper text:first-child {
  margin-right: 10rpx !important;
}

.spu-preview .price-wrapper .disPrice {
  color: #999;
  text-decoration: line-through;
}

.spu-preview .subtitle-wrapper {
  line-height: 36rpx;
  font-size: 24rpx;
  color: #999;
  margin: 10rpx 16rpx 28rpx 16rpx;
}
