page {
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
}

.home {
  width: 100%;
  height: 100%;
}

.home .home-banner {
  width: 100%;
  height: 260rpx;
}

.home .home-banner image {
  width: 100%;
  height: 100%;
}

.home .swiper-wrapper {
  width: 100%;
  height: 360rpx;
}

.home .swiper-wrapper .swiper-list {
  height: 100%;
}

.home .swiper-wrapper .swiper-list image {
  width: 100%;
  height: 100%;
}

.home .coupon-banner {
  width: 100%;
  height: 300rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.home .coupon-banner image {
  width: 100%;
  height: 300rpx;
}

.home .week_news {
  margin-bottom: 20rpx;
  background-color: #fff;
  padding-bottom: 32rpx;
}

.home .week_news .top-wrapper {
  padding: 44rpx 30rpx 28rpx;
  height: 88rpx;
}

.home .week_news .top-wrapper image {
  width: 100%;
  height: 100%;
}

.home .week_news .list-wrapper {
  display: flex;
  margin-left: 30rpx;
}

.home .week_news .list-wrapper .item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 60rpx;
}

.home .week_news .list-wrapper .item image {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 14rpx;
}

.home .week_news .list-wrapper .item .title {
  font-size: 20rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.home .week_news .list-wrapper .item .price {
  color: #157658;
  font-size: 28rpx;
  line-height: 28rpx;
}

.home .handpick {
  display: flex;
}

.home .handpick image {
  width: 100%;
  height: 880rpx;
}

.home .hot-wrapper {
  margin-top: 20rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
}

.home .hot-wrapper .top {
  padding: 44rpx 30rpx 28rpx;
}

.home .hot-wrapper .top image {
  width: 100%;
  height: 88rpx;
}

.home .fashion-wrapper {
  width: 100%;
  margin-top: 20rpx;
  display: flex;
}

.home .fashion-wrapper image {
  width: 100%;
  height: 840rpx;
}

.home .recommend-wrapper {
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  background-color: #fff;
}

.home .recommend-wrapper .top {
  margin: 36rpx 30rpx 38rpx;
}

.home .recommend-wrapper .top image {
  width: 100%;
  height: 68rpx;
}

.home .recommend-wrapper .tip {
  text-align: center;
  margin: 20rpx;
}
